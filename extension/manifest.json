{
  "manifest_version": 3,
  "name": "AI推敲 by WebLLM",
  "version": "1.0.0",
  "description": "選択したテキストをWebLLMで推敲します",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI推敲"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
